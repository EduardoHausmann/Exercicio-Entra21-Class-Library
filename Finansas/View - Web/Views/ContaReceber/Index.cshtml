
@{
    ViewBag.Title = "Index";
}

<title>Lista Conta Receber</title>
<h2 class="text-center fw-bolder mt-3 mb-3">Lista de Contas a Receber</h2>

<div class="row">
    <div class="col-12">
        <a class="btn btn-outline-primary mt-3 mb-3" style="float: right;" href="/contaReceber/Cadastro" id="botao-cadastro"><i class="bi bi-plus-square-dotted"></i> Cadastrar Conta</a>
    </div>
</div>

<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Valor</th>
            <th>Valor Recebido</th>
            <th>Ação</th>
        </tr>
    </thead>

    <tbody>
        @foreach(Model.ContaReceber contaReceber in ViewBag.ContasReceber)
        {
            <tr>
                <td>@contaReceber.Id</td>
                <td>@contaReceber.Nome</td>
                <td>@contaReceber.Valor</td>
                <td>@contaReceber.ValorRecebido</td>
                <td>
                    <a href="/contaReceber/editar?id=@contaReceber.Id" class="btn btn-outline-primary"><i class="bi bi-pencil"></i> Editar</a>
                    <a href="/contaReceber/apagar?id=@contaReceber.Id" class="btn btn-outline-danger"><i class="bi bi-trash"></i> Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>